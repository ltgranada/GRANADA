@model IEnumerable<Instructor>;

<div>Instructor List</div>
<br />
<a asp-action="AddInstructor" class="btn btn-primary">Add Instructor</a>


<table class="table table-dark">

    <tr>
        <th colspan="9">Instructor</th>
    </tr>
  
    <tr>
        <td>ID</td>
        <td>Firstname</td>
        <td>Lastname</td>
        <td>IsTenured</td>
        <td>Rank</td>
        <td>HiringDate</td>
        <td>Details</td>
        <td>Update</td>
        <td>Instructor</td>


    </tr>
    @foreach (var instructor in Model)
    {
        <tr>
            <td>@instructor.Id</td>
            <td>@instructor.FirstName</td>
            <td>@instructor.LastName</td>
            <td>@instructor.IsTenured</td>
            <td>@instructor.rank</td>
            <td>@instructor.HiringDate</td>
            <td><a asp-action="ShowDetail" asp-route-id="@instructor.Id" class="btn btn-primary">Show Details</a></td>
            <td><a asp-action="UpdateInstructor" asp-route-id="@instructor.Id" class="btn btn-primary">Update Instructor</a></td>
            <td><a asp-action="Delete" asp-route-id="@instructor.Id" class="btn btn-danger">Delete Instructor</a></td>


        </tr>
    }
</table>
