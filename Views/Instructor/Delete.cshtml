@model Instructor;
<h1>Are you sure you want to delete?</h1>

<form asp-action="Delete" asp-controller="Instructor" method="post">
    <div class="form-group">
        <label asp-for="Id">ID</label>
        <input asp-for="Id" class="form-control" readonly>
    </div>
    <div class="form-group">
        <label asp-for="FirstName">First Name</label>
        <input asp-for="FirstName" class="form-control" readonly>
    </div>
    <div class="form-group">
        <label asp-for="LastName">Last Name</label>
        <input asp-for="LastName" class="form-control" readonly>
    </div>

    <div class="form-group">
        <label asp-for="IsTenured">Tenured</label>
        <input asp-for="@Model.IsTenured" readonly />
    </div>
    <div class="form-group">
        <label asp-for="rank">Rank</label>
        <select asp-for="rank" asp-items="@Html.GetEnumSelectList(typeof(Rank))" class="form-control" readonly></select>
    </div>
    <div class="form-group">
        <label asp-for="HiringDate">Hiring Date</label>
        <input asp-for="HiringDate" class="form-control" readonly />
    </div>
    <button type="submit" class="btn btn-primary">Delete</button>
    <button type="button" onclick="history.back()" class="btn btn-secondary">Cancel</button>
</form>